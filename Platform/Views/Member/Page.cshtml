        .layout_name{
            font-size: 30px;
            font-weight: bolder;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 30px auto auto 50px;
        }

        .container-list{
            width: 90%;
            height: 300px;
            margin: 30px auto auto auto;
            border-radius: 10px;
            column-count: 2;
            background-color: rgb(207, 207, 207);
        }

        .context{
            width: 100%;
            height: 100%;
        }
        .context-title{
            margin: 10px auto auto 20px;
            font-size: 20px;
            font-weight: bolder;
